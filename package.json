{
  "name": "dash",
  "private": true,
  "version": "1.0.0",
  "description": "A unified task and event tracking application with quick-capture capabilities",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "ios": "bun run build && bunx cap sync ios && bunx cap open ios",
    "ios:sync": "bun run build && bunx cap sync ios",
    "ios:run": "bun run build && bunx cap sync ios && bunx cap run ios --scheme Dash",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@capacitor-community/date-picker": "^7.1.0",
    "@capacitor-community/sqlite": "^7.0.3",
    "@capacitor/app": "^8.0.0",
    "@capacitor/app-launcher": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "@capacitor/filesystem": "8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/share": "^8.0.0",
    "@capawesome/capacitor-app-shortcuts": "^8.0.0",
    "@ionic/vue": "^8.7.17",
    "@ionic/vue-router": "^8.7.17",
    "chrono-node": "^2.9.0",
    "ionicons": "^8.0.13",
    "swiper": "^12.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.1.4"
  }
}
